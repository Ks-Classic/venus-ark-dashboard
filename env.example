# 採用ダッシュボード環境変数設定例
# このファイルをコピーして.env.localとして使用してください

# ===== 採用（GAS/Sheets）設定 =====
# GAS Web App のURL（推奨）
GAS_WEB_APP_URL=https://script.google.com/macros/s/your-script-id/exec
# または GAS スクリプトID（上記URLを組み立てる場合）
GAS_SCRIPT_ID=your-script-id

# ===== Google Sheets設定（必須） =====
# メイン採用管理シートのID
MAIN_RECRUITMENT_SPREADSHEET_ID=1lcjC-KOH8OD9Ar3J4XIPz62vSRLI7xfXCwKM2o7PRjY

# 応募フォームシートのID
ENTRY_FORM_SPREADSHEET_ID=1YCniJwv7BBR6zvrIu_tOL1dwDgNLIG-P-YM90yITrO4

# ===== Firebase Admin 設定（稼働者状況/施策向け） =====
# サービスアカウントJSON（1行、改行は \n にエスケープ）
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","token_uri":"https://oauth2.googleapis.com/token"}

# ===== 開発環境設定 =====
# 環境設定
NODE_ENV=development

# ポート設定
PORT=8080

# 採用デバッグモード
RECRUITMENT_DEBUG=false